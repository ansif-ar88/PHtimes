<%- include('../layouts/adminLayouts/header.ejs') %>
<%- include('../layouts/adminLayouts/sidebar.ejs') %>
<%- include('../layouts/adminLayouts/navbar.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                    <h3>BANNER</h3><span><div class="d-flex justify-content-end">
<button type="button" class="btn btn-outline-primary " data-bs-toggle="modal" data-bs-target="#addBannerModal">ADD BANNER</button>
</div></span>
                    
<!-- Modal -->
<div class="modal fade" id="addBannerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">ADD BANNER</h5>
      
    </div>
    <div class="modal-body">
        <form action="/admin/addbanner" method="post" class="forms-sample" enctype="multipart/form-data">
            <div class="form-group">
              <label for="exampleInputUsername1">Heading</label>
              <input type="text" class="form-control"  placeholder="Heading" name="heading">
            </div>
            <div class="form-group">
               
                    <label>Choose Image</label> 
                    <div class="input-group col-xs-12">
                        <input class="bt" style="height: 40px;width: 500px ; background-color: rgb(130, 130, 130);color: white;" accept="Image/*" type="file" name="image" multiple>
                    </div>
                 
            </div>
           
           
            
            
           
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            
            <button type="button" class="btn btn-dark" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
          </form>
    </div>
    
  </div>
</div>
</div>
                </div>
              </div>
            </div>
          </div>



          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
          <div class="card-body">
            <h4 class="card-title">Banners</h4>
            
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Image</th>
                    <th>Heading</th>                  
                    
                  </tr>
                </thead>
                <tbody>
                    <% if(banners.length > 0){
                        banners.forEach((banner,i) => { %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td>
                          
                            <img style="width: 192px; height: 60px; border-radius: 0;" src="/adminAssets/adminImages/<%=banner.image%>" alt="image" />
                         
                        </td>
                        <td><%= banner.heading %></td>
                      </tr>
                      <%   })  
                    }  %>
                       
                </tbody>
              </table>
            </div>
           
          </div>
          </div>
          </div>
    </div>
</div>
<%- include('../layouts/adminLayouts/footer.ejs') %>