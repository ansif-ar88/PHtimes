<%- include('../layouts/adminLayouts/header.ejs') %>
<%- include('../layouts/adminLayouts/sidebar.ejs') %>
<%- include('../layouts/adminLayouts/navbar.ejs') %>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h4 >SALES REPORT</h4>
                <!-- <a href="" type="button" class="btn btn-outline-primary">PRINT REPORT</a> -->
                
            </div>
        </div>
    </div>
</div>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">              
            <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover" id="salesReport">
                    <thead>
                    <tr>
                        <th>No</th>
                        <th>Date</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Payment Method</th>
                        <th>Total Amount</th>
                        <th>STATUS</th>
                    </tr>
                    </thead>
                    <tbody>
            <% order.forEach((item,i) => { %>
               
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= item.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                        <td><%= item.products.productDetails.productName %></td>
                        <td><%= item.products.count %></td>
                        <td><%= item.products.productPrice %></td>
                        <td><%= item.paymentMethod %></td>
                        <td><%= item.products.totalPrice %></td>
                        <td><%= item.products.status %></td>
                        
                    </tr>                        
           <% }) %>                                         
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
<style>
    .dt-button.buttons-excel,
    .dt-button.buttons-csv,
    .dt-button.buttons-pdf {
      background-color: #4c7aaf;
      color: white;
      border-radius: 5px;
      border: none;
      margin: 10px;
      padding-left: 30px;
      padding-right: 30px;
      height: 30px;
    }
  </style>


<script>
    $(document).ready(function () {
      $('#salesReport').DataTable({
        dom: 'Bfrtip',
        buttons: [
           'excel', 'pdf'
        ]
      });
    });
  </script>
  
