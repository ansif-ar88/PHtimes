    <div class="bg-light-2 pt-6 pb-6 featured">
        <div class="container-fluid">
            <div class="heading heading-center mb-3">
                <h2 class="title">FEATURED PRODUCTS</h2><!-- End .title -->

                
            </div><!-- End .heading -->

            <div class="tab-content tab-content-carousel">
                <div class="tab-pane p-0 fade show active" id="featured-women-tab" role="tabpanel" aria-labelledby="featured-women-link">
                    <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl" 
                        data-owl-options='{
                            "nav": false, 
                            "dots": true,
                            "margin": 20,
                            "loop": false,
                            "responsive": {
                                "0": {
                                    "items":2
                                },
                                "480": {
                                    "items":2
                                },
                                "768": {
                                    "items":3
                                },
                                "992": {
                                    "items":4
                                },
                                "1200": {
                                    "items":5,
                                    "nav": true
                                }
                            }
                        }'>
                        <%
                        if(productData.length > 0){
                            for(let i = 0;i<productData.length;i++){
                                %>
                        <div class="product product-7 text-center">
                            <figure class="product-media">
                                <a href="/showProduct/<%=productData[i]._id%>">
                                    <img src="/adminAssets/adminImages/<%=productData[i].image[0]%>" alt="Product image" class="product-image">
                                </a>

                                <div class="product-action-vertical">
                                    <a href="#" class="btn-product-icon btn-wishlist btn-expandable"><span>add to wishlist</span></a>
                                    <a href="popup/quickView.html" class="btn-product-icon btn-quickview" title="Quick view"><span>Quick view</span></a>
                                </div><!-- End .product-action-vertical -->

                                <div class="product-action">
                                    <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
                                </div><!-- End .product-action -->
                            </figure><!-- End .product-media -->

                            <div class="product-body">
                                <h3 class="product-title"><a href="/showProduct/<%=productData[i]._id%>"><%=productData[i].productName%></a></h3><!-- End .product-title -->
                                <div class="product-price">
                                    ₹ <%=productData[i].price%>.00
                                </div><!-- End .product-price -->
                                <div class="ratings-container">
                                    <div class="ratings">
                                        <div class="ratings-val" style="width: 20%;"></div><!-- End .ratings-val -->
                                    </div><!-- End .ratings -->
                                    
                                </div><!-- End .rating-container -->
                            </div><!-- End .product-body -->

                     
                        </div><!-- End .product -->


                        <%
                    }
                }
                        %>
                        
                    </div><!-- End .owl-carousel -->
                </div><!-- .End .tab-pane -->
                
            </div><!-- End .tab-content -->
