<%- include('../layouts/userLayouts/header.ejs') %>
 <%-include('../layouts/userLayouts/navbar.ejs') %>
 <div class="page-wrapper">
  <%-include('../layouts/userLayouts/accountsidebar.ejs') %>



<div class="row ">
 <!-- <div class="col-md-8 col-lg-10"> -->
                    <div class="col-lg-12">
                        <table class="table table-cart table-mobile">
                            <thead>
                                <tr>
                                  
                                  <th>   </th>
                                  <th>Product</th>
                                  <th>order date</th>
                                  <th>Total Amount</th>
                                  <th>Payment</th>
                                  <th>Status</th>
                                  <th>Action</th>
                                </tr>
                            </thead>
                           
                            <tbody>
                              <% if(orders.length > 0){
                                orders.forEach((order)=>{
                                  %>
                                  <tr>
                                  <td class="product-col">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a >
                                                
                                                    <img src="/adminAssets/adminImages/<%= order.products[0].productId.image[0]%>" alt="Product image">
                                               
                                            </a>
                                        </figure>
                                        </div>
                                      </td>
                                        
                                      
                                      <td> <%= order.products[0].productId.productName%></td>
                                      <td><%= order.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                                    
                                  
                                  
                                
                                  <td><%= order.totalAmount%></td>
                                  <td><%= order.paymentMethod %></td>
                                  <td><%= order.status%></td>
                                  <td><a class="btn btn-outline-primary-2" href="vieworder/<%= order._id %>">VIEW</a></td>
                                </tr>
                                  <%})
                                } %>
                            </tbody>
                           
                        </table><!-- End .table table-wishlist -->
                        
                      
                    </div><!-- End .col-lg-9 -->
                    <!--</div> End .col-lg-9 -->
                    </div><!-- End .col-lg-9 -->
                  </div>

<%- include('../layouts/userLayouts/accountfooter.ejs') %>
