<div class="row">
                    <div class="col-lg-12">
                        <table class="table table-cart table-mobile">
                            <thead>
                                <tr>
                                  
                                  <th>   </th>
                                  <th>order date</th>
                                  <th>Product</th>
                                  <th>Total Amount</th>
                                  <th>Payment</th>
                                  <th>Status</th>
                                  <th>Action</th>
                                </tr>
                            </thead>
                           
                            <tbody>
                              <% if(orders.length > 0){
                                orders.forEach((order)=>{
                                  %>
                                  <tr>
                                  
                                  
                                 
                                    
                                  <td class="product-col">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a >
                                                
                                                    <img src="/adminAssets/adminImages/<%= order.products[0].productId.image[0]%>" alt="Product image">
                                               
                                            </a>
                                        </figure>
                                        </div>
                                      </td>
                                        
                                      <td> <%= order.date%></td>
                                      <td> <%= order.products[0].productId.productName%></td>
                                        
                                  
                                  
                                
                                  <td><%= order.totalAmount%></td>
                                  <td><%= order.paymentMethod %></td>
                                  <td><%= order.status%></td>
                                  <td><button class="btn btn-outline-primary-2">VIEW</button></td>
                                </tr>
                                  <%})
                                } %>
                            </tbody>
                           
                        </table><!-- End .table table-wishlist -->
                        
                      
                    </div><!-- End .col-lg-9 -->

