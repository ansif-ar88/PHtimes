	<script>

		function addtocart(productid){
		 $.ajax({
			 url:"/addtocart",
			 method:"post",
			 data:{
				 id:productid
			 },
			 success:(response)=>{
				 if(response.success){
					 swal.fire({
						 positon:'center',
						 icon:"success",
						 title  : 'product added to cart',
						 showConfirmButton:false,
						 timer : 1500,
					 })
				 }
			 }
		 })
		}
	 
	 
	 </script>


