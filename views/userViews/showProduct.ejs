<script>

    function addtocart(productid){
     $.ajax({
         url:"/addtocart",
         method:"post",
         data:{
             id:productid
         },
         success:(response)=>{
             if(response.success){
                 swal.fire({

                     positon:'center',
                     icon:"success",
                     title  : 'product added to cart',
                     showConfirmButton:false,
                     timer : 1500,

                 })
                 location.reload();
             }
         }
         
     })
    }
 

    function plzlogin(){
     $.ajax({
         success:(response)=>{
             
                 swal.fire({
                     positon:'center',
                     icon: 'warning',
                     title  : 'Please Login ',
                     showConfirmButton:false,
                     timer : 1500,
                 })
             
         }
     })
    }
 
 
 </script>


