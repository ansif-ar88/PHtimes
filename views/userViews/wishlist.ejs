<%- include('../layouts/userLayouts/header.ejs') %>
<%- include('../layouts/userLayouts/navbar.ejs') %>
<div class="page-wrapper">
<main class="main">
        
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
            	<div class="container">
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								<th>Product</th>
								<th>Name</th>
								<th>Price</th>
								<th>Stock Status</th>
								<th></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
                            <%
                            if(wishlist.length > 0){
                                wishlist.forEach((wish)=>{
                                %>
							<tr>
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="#">
												<img src="/adminAssets/adminImages/<%= wish.productId.image[0] %>">
											</a>
										</figure>
                                    </div><!-- End .product -->
                                    </td><td>
										<h3 class="product-title">
											<a href="#"><%= wish.productId.productName %></a>
										</h3><!-- End .product-title -->
									
								</td>
								<td class="price-col"><%=wish.productId.price%></td>
                                <%if(wish.productId.Status == true){%>
								<td class="stock-col"><span class="in-stock">In stock</span></td>
                                <%}else{%>
                                    <td class="stock-col"><span class="out-of-stock">Out of stock</span></td>
                                <%}%>
								<td class="action-col">
									<button class="btn btn-block btn-outline-primary-2" onclick="addtocart('<%=wish.productId._id%>')">Add To Cart</button>
								</td>
								<td class="remove-col"><button class="btn-remove"><i class="icon-close"></i></button></td>
							</tr>
                            <%})%>

                            <%
                        }else{
                            %>
                           <h1>NO PRODUCTS ADDED TO WISHLIST</h1>
                        <%}%>
						</tbody>
					</table><!-- End .table table-wishlist -->
	            	
            	</div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div>

        <script>
            function addtocart(productid){
     $.ajax({
         url:"/addtocartfromwish",
         method:"post",
         data:{
             id:productid
         },
         success:(response)=>{
             if(response.success){
                 swal.fire({

                     positon:'center',
                     icon:"success",
                     title  : 'product added to cart',
                     showConfirmButton:false,
                     timer : 1500,

                 })
                 location.reload();
             }else{
                swal.fire({

                positon:'center',
                icon:"warning",
                title  : 'product Quantity exceeded',
                showConfirmButton:false,
                timer : 1500,

})
             }
         }
         
     })
    }
        </script>
        <%- include('../layouts/userLayouts/footer.ejs') %>